---
interface Props {
  title: string;
  description: string;
  items: string[];
}

const { title, description, items } = Astro.props;
---

<section aria-labelledby="tech-stack-heading">
  <h2 id="tech-stack-heading" class="text-foreground/64 font-mono uppercase text-sm mt-12 mb-3">
    <span class="text-primary" aria-hidden="true">â–·</span>
    {title}
  </h2>

  <p class="mb-4">{description}</p>

  <ul class="flex flex-wrap gap-[4px] mt-4" role="list" aria-label="Technology stack">
    {
      items.map((item) => (
        <li>
          <span class="pill">{item}</span>
        </li>
      ))
    }
  </ul>
</section>

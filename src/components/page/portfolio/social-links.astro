---
interface SocialLinks {
  github?: string;
  linkedin?: string;
  x?: string;
  website?: { name: string; url: string }[];
}

interface Props {
  github?: string;
  linkedin?: string;
  x?: string;
  website?: { name: string; url: string }[];
  title?: string;
}

const { github, linkedin, x, website, title } = Astro.props;
---

<section>
  {
    title && (
      <h2 class="text-foreground/64 font-mono uppercase text-sm mt-12 mb-3">
        <span class="text-primary" aria-hidden="true">
          â–·
        </span>
        {title}
      </h2>
    )
  }

  <nav class="flex flex-wrap gap-2" aria-label="Social links">
    {
      github && (
        <a class="link-button" href={github} target="_blank" rel="noopener noreferrer" aria-label="GitHub profile">
          GitHub
        </a>
      )
    }
    {
      linkedin && (
        <a class="link-button" href={linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn profile">
          LinkedIn
        </a>
      )
    }
    {
      x && (
        <a class="link-button" href={x} target="_blank" rel="noopener noreferrer" aria-label="X (Twitter) profile">
          X
        </a>
      )
    }
    {
      website &&
        website.map((site) => (
          <a
            key={site.url}
            class="link-button"
            href={site.url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`${site.name} website`}
          >
            {site.name}
          </a>
        ))
    }
  </nav>
</section>

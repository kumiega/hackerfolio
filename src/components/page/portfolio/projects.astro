---
interface Project {
  name: string;
  description: string;
  url?: string;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section aria-labelledby="projects-heading">
  <h2 id="projects-heading" class="text-foreground/64 font-mono uppercase text-sm mt-12 mb-3">
    <span class="text-primary" aria-hidden="true">▷</span> My projects
  </h2>

  <nav aria-label="Selected projects">
    <ul class="flex flex-col space-y-[-1px]" role="list">
      {
        projects.map((project) => (
          <li>
            <a href={project.url || "#"} class="link-card">
              <div class="link-card-content">
                <h3 class="text-foreground font-medium">{project.name}</h3>
                <p class="text-muted-foreground text-sm">{project.description}</p>
              </div>
              <span class="link-card-arrow" aria-hidden="true">
                →
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</section>

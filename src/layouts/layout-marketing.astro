---
import "../styles/marketing.css";

interface Props {
  title?: string;
}

const { title = "Hackerfolio - AI-powered portfolio builder for developers" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <style is:global>
      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter-Italic.woff2") format("woff2-variations");
        font-weight: 100 900;
        font-style: italic;
        font-display: swap;
      }

      @font-face {
        font-family: "Inter";
        src: url("/fonts/Inter.woff2") format("woff2-variations");
        font-weight: 100 900;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "Departure Mono";
        src: url("/fonts/Departure-Mono.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </head>
</html>
<body>
  <slot />
</body>

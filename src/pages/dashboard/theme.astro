---
import Layout from "../../layouts/layout-base.astro";
import { DashboardLayout } from "@/components/page/dashboard/layout";

const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/signin");
}

if (user && !user.is_onboarded) {
  return Astro.redirect("/onboarding");
}
---

<Layout title="Theme - Hackerfolio">
  <DashboardLayout client:load user={user} currentPath="/dashboard/theme">
    <div class="flex flex-1 flex-col gap-6">
      <div>
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold tracking-tight mb-3">Themes</h1>
            <p class="text-muted-foreground">Select your preferred theme for your portfolio.</p>
          </div>
        </div>
      </div>
      <div class="bg-muted/20 aspect-video animate-pulse max-h-[40vh] grid place-items-center">Coming soon...</div>
    </div>
  </DashboardLayout>
</Layout>

---
import Layout from "../../layouts/layout-base.astro";
import { BioEditorPage } from "@/components/page/dashboard/bio-editor-page";

const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/signin");
}

if (user && !user.is_onboarded) {
  return Astro.redirect("/onboarding");
}
---

<Layout title="Bio Editor - Hackerfolio">
  <BioEditorPage client:load user={user} currentPath="/dashboard/bio" />
</Layout>
